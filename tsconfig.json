{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
  },
  "include": ["src/**/*.ts"]
}
